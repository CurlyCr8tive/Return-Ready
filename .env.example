# Return Ready — Environment Template
# Copy to .env and fill in real values — never commit .env

# ─── ANTHROPIC ────────────────────────────────────────────
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ─── GEMINI (embeddings) ──────────────────────────────────
GEMINI_API_KEY=your_gemini_api_key_here

# ─── SUPABASE ─────────────────────────────────────────────
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# These are exposed to the Next.js frontend
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ─── RESEND (email) ───────────────────────────────────────
RESEND_API_KEY=your_resend_api_key_here
FROM_EMAIL=returnready@yourdomain.com

# ─── JWT (form token signing) ─────────────────────────────
JWT_SECRET=a_long_random_secret_string_at_least_32_chars

# ─── APP ──────────────────────────────────────────────────
JOANNA_EMAIL=joanna@pursuit.org
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
# Optional access gate for dashboard pages.
# Comma-separated list. Leave empty to allow any authenticated user.
# Example (build phase): DASHBOARD_ALLOWED_EMAILS=builder@pursuit.org,tester@pursuit.org,joanna@pursuit.org
# Example (go-live):    DASHBOARD_ALLOWED_EMAILS=joanna@pursuit.org
DASHBOARD_ALLOWED_EMAILS=

# Day of month to auto-send forms (default: 28)
FORM_SEND_DAY=28
